{{#if isLoading}}
  <p>Please wait while we attempt to lookup link information...</p>
  <img src="/assets/images/ajax-loader.gif"/>
{{else}}
  <div class="link_edit nav well">
    <div class="row-fluid">
      <div class="span12">
        <button id="cancelEdit" class="pull-right btn-inverse" {{action cancelEditing}}>X</button>
      </div>
    </div>
    {{! Thumbnail }}
    <div class="row-fluid">
      <div class="span12" >
        <img {{bindAttr src="thumb_url"}} width="200" height="200"/>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <p>Thumbnail Choice: {{increment selected_thumbnail_index }}/{{ thumbnails.length }}</p>
      </div>
    </div>
    {{! Render select URL for thumnail }}
    <div class="row-fluid">
      <div class="span1 pull-left">
        <button class="btn btn-mini" {{action prevThumbnail}}>&lt;</button>
      </div>
      {{view Ember.TextField class="span10" placeholder="Paste URL for thumbnail" valueBinding="thumb_url"}}
      <div class="span1 pull-right">
        <button class="btn btn-mini" {{action nextThumbnail}}>&gt;</button>
      </div>
    </div>
    {{! End Thumbnail }}
    <div class="row-fluid">
      <strong class="span2">Link's URL:</strong>
      <div class="span10">
        {{view Ember.TextField class="span9" placeholder="Paste URL here to share..." valueBinding="url"}}
      </div>
    </div>
    <div class="row-fluid">
      <strong class="span2">Title:</strong>
      <div class="span10">
        {{view Ember.TextField placeholder="Enter title here..." valueBinding="title"}}
      </div>
    </div>
    <div class="row-fluid">
      <strong class="span2">Description</strong>
      <div class="span10">
        {{view Ember.TextArea placeholder="Enter description here..." valueBinding="description"}}
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        {{view PN.TagField placeholder="Enter keywords here..." valueBinding="tag" name="linktags"}}
      </div>
    </div>
    <button class="btn btn-primary" {{action submitLink}}>Submit</button>
  </div>
{{/if}}