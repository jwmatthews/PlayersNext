<div class="span6">
  {{#if isEditing}}
    {{partial "link/submitEdit"}}
  {{else}}
    <!-- <p>Please paste a URL below to share a link....</p> -->
    {{view Ember.TextField placeholder="Paste URL here to share..." valueBinding="url" action="beginLinkSubmit" class="span6"}}
    {{/if}}
</div>
<div class="row-fluid">
    <div class="span12">
        <br />
    </div>
</div>

{{#collection Ember.ListView contentBinding="controller" height=800 rowHeight=140 }}
  <hr /> 
  <div class="index_item">
    <div class="index_left pull-left">
      {{#linkTo "link.detail" this}}
        <img {{bindAttr src="thumbnail.url"}} width="100" height="100" />
      {{/linkTo}}
    </div>
    <div class="index_right pull-right">
        <p><strong>Title:</strong> {{#linkTo "link.detail" this}}{{title}}{{/linkTo}}</p>
        <p><strong>Description:</strong> {{truncate_60 description }}</p>         
        <!-- 
        <p><strong>URL:</strong> <a {{bindAttr href="url" }}>{{url}} </a></p> 
        <p><strong>Description:</strong> {{description}}</p> 
        -->
        <p><strong>Tags:</strong> {{tags}}</p>
    </div>
  </div>
{{/collection}}
