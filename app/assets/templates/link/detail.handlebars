<div class="row-fluid">
    <div class="span4">
      <a {{bindAttr href="url" }}>
        <img {{bindAttr src="thumbnail.url"}} width="200" height="200" />
      </a>
    </div>
    <div class="span8">
      <p><strong>Title:</strong> {{title}}</p>
      <p><strong>URL:</strong> <a {{bindAttr href="url" }}>{{url}} </a></p>
      <p><strong>Description:</strong> {{description}}</p>
      <p><strong>Tags:</strong> {{tags}}</p>
    </div>
</div>
<div class="row-fluid">
  <div class="span12">
    {{#linkTo "link.index"}}&lt; back{{/linkTo}}
  </div>
</div>