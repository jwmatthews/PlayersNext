# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Landing.index
GET     /info                   controllers.Application.index
GET     /link                   controllers.Link.index
POST    /link                   controllers.Link.create

# REST API
GET     /api/link               controllers.api.Link.index
POST    /api/link               controllers.api.Link.create
GET     /api/link/:id           controllers.api.Link.details(id: String)
PUT     /api/link/:id           controllers.api.Link.update(id: String)
DELETE  /api/link/:id           controllers.api.Link.delete(id: String)

GET     /api/link/:id/tag       controllers.api.LinkTag.all(id: String)
PUT     /api/link/:id/tag/:tag  controllers.api.LinkTag.add(id:String, tag: String)
DELETE  /api/link/:id/tag/:tag  controllers.api.LinkTag.delete(id: String, tag: String)


GET     /api/tags                controllers.api.Tag.all
POST    /api/tags/:tag         controllers.api.Tag.create(tag: String)
PUT     /api/tags/:tag         controllers.api.Tag.update(tag: String)
DELETE  /api/tags/:tag         controllers.api.Tag.details(tag: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
